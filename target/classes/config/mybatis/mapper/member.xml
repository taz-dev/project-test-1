<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="m">

	<!-- 회원가입 -->
	<insert id="register" parameterType="vo.MemberVO">
	    insert into member values( seq_mem.nextval,
	               			#{id}, 
	                 	    #{pw},
	                 	    #{name},
	                 	    #{addr},
	                 	    #{tel},
	                 	    #{isAdmin} )
    </insert>
    
    <!-- 로그인 -->
	<select id="login" resultType="vo.MemberVO" parameterType="vo.MemberVO"> <!-- resultType="com.koreait.vo.MemberVO" -->
		select * from member		 
		where id = #{id}
	</select>
	
	<!-- 회원정보 수정 -->
	<update id="memberUpdate" parameterType="vo.MemberVO">
		update member 
		set pw = #{pw},
		    name = #{name},
		    addr = #{addr},
		    tel = #{tel},
		where id = #{id}
	</update>
	
	<!-- 회원탈퇴 -->
	<delete id="memberDelete" parameterType="vo.MemberVO">
		delete from member
		where id = #{id}
	</delete>
	
	<!-- 패스워드 체크 -->
	<select id="passChk" resultType="map" parameterType="map">
		select count(*) from member
		where id = #{id}
		and pw = #{pw}
	</select>

	<!-- 아이디 중복 체크 -->
	<select id="idChk" resultType="vo.MemberVO">
		select count(*) from member
		where id = #{id}
	</select>
	
	<select id="searchUser" parameterType="map" resultType="map">
		select * from member
		where id = #{id}
	</select>
	
</mapper>